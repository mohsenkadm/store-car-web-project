@section Script{
    <script>

        $("#commend_btn").on("click", (e) => {
            e.preventDefault();
            var object = {
                commend: $("#commend").val(),
                post_id: $("#commend").val(),
            };
            if (object.commend === "" || object.commend.trim() === "") {
                toust.error("يرجى كتابة التعليق");
                return;
            }

            call_ajax("POST", "Blogs/Commend_insert", object, null);
        });

        $("#like_btn").on("click", (e) => {
            e.preventDefault();
            var object = {

                post_id: $("#commend").val(),
            };

            call_ajax("POST", "Blogs/like_insert", object, null);
        });

    </script>
}